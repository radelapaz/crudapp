<% include header.ejs %>
<div class="container">
    <% if (message != ''){ %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>
    <%if (item) { %>
    <div class="row">
        <h2>Edit Item</h2>
    </div>
    <div class="row">
        <div class="col-6">
            <form action="/edit-page/<%= item.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Item Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= item.name%>" required>
                </div>
                <div class="form-group">
                    <label for="quantity">Item Quantity</label>
                    <input type="number" class="form-control" id="quantity" name="quantity" value="<%= item.quantity%>" min=0 oninput="validity.valid||(value='');" placeholder="Enter Quantity" required>
                </div>
                <div class="form-group">
                    <label for="amount">Item Amount</label>
                    <input type="number" class="form-control" id="amount" name="amount" value="<%= item.amount%>"  min=0 oninput="validity.valid||(value='');"  placeholder="Enter Amount" required>
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            <% } else { %>
                <p class="text-center">Item Not Found. Go <a href="/add-page">here</a> to add items.</p>
            <% } %>
        </div>
    </div>
</div>
</body>
</html>